@model IEnumerable<Gases.Models.Layer>
@using Gases.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer

@{
    ViewData["Title"] = SharedLocalizer["Layers"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@SharedLocalizer["Layers"]</h2>

@{
    var user = Context.User;
    bool administrator = false;
    if (user.Identity.IsAuthenticated)
    {
        if (user.IsInRole("Administrator"))
        {
            administrator = true;
        }
    }
}
@*@if (administrator)
{
    <p>
        <a asp-action="Create">@SharedLocalizer["Create"]</a>
    </p>
}*@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GeoServerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FileNameWithPath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GeoServerStyle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameKK)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameRU)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameEN)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VerticalSlice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GDataType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gase)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GeoServerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FileNameWithPath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GeoServerStyle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameKK)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameRU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VerticalSlice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Year)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GDataType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gase.Name)
            </td>
            @if (administrator)
            {
                <td>
                    @*<a asp-action="Edit" asp-route-id="@item.Id">@SharedLocalizer["Edit"]</a> |*@
                    <a asp-action="Details" asp-route-id="@item.Id">@SharedLocalizer["Details"]</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">@SharedLocalizer["Delete"]</a>
                </td>

            }
            else
            {
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@SharedLocalizer["Details"]</a>
                </td>

            }
        </tr>
        }
    </tbody>
</table>
