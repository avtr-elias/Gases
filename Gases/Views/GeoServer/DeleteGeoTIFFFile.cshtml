@using Gases.Controllers
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResources> SharedLocalizer
@{
    ViewData["Title"] = SharedLocalizer["DeleteGeoTIFFFile"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@SharedLocalizer["DeleteGeoTIFFFile"]</h2>
<h3>@ViewData["Message"]</h3>
<div class="row">
    <div class="col-md-4">
        <form asp-action="DeleteGeoTIFFFile">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@SharedLocalizer["GeoTIFFFile"]</label>
                <select name="GeoTIFFFile" class="form-control" asp-items="ViewBag.GeoTIFFFiles"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer["Delete"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>